<!--TODO(1) COMPLETE  Change the ConstraintLayout to a LinearLayout-->
<!--TODO (2) COMPLETE  Make the orientation vertical-->
<!--TODO (3) COMPLETE  Give left, right, and top padding of 16dp-->
<!--TODO (4) COMPLETE  Remove the line that declares the id, we don't need it-->
<!--TODO (5) COMPLETE  Remove the xmlns:app declaration, we don't need that anymore-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TODO (6) COMPLETE  Delete this TextView-->

    <!--TODO (7) COMPLETE  Add an EditText-->
    <!--TODO (8) COMPLETE  Give the EditText an id of @+id/et_search_box-->
    <!--TODO (9) COMPLETE  Set the text size to 22sp-->
    <!--TODO (10) COMPLETE  Set the width to match_parent and the height to wrap_content-->
    <!--TODO (11) COMPLETE  Provide a hint telling the user to enter a query and then click search-->
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/et_search_box"
        android:hint="Enter a search query and press search"/>

    <!--TODO (12) COMPLETE  Add a TextView-->
    <!--TODO (13) COMPLETE  Give the TextView an id of @+id/tv_url_display-->
    <!--TODO (14) COMPLETE  Set the text size to 22sp-->
    <!--TODO (15) COMPLETE  Set the width to wrap_content and the height to wrap_content-->
    <!--TODO (16) COMPLETE  Give the TextView a top margin of 8dp-->
    <!--TODO (17) COMPLETE  Set the text to tell the user their search URL will show up here when they click search-->
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_url_display"
        android:text="Your search URL will show up here"/>

    <!--TODO (18) COMPLETE  Add a ScrollView-->
    <!--TODO (19) COMPLETE  Set the width to match_parent and the height to wrap_content-->
    <!--TODO (20) COMPLETE  Set the top margin to 16dp-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!--TODO (21) COMPLETE Within the ScrollView, add a TextView-->
        <!--TODO (22) COMPLETE Give the TextView an id of @+id/tv_github_search_results_json-->
        <!--TODO (23) COMPLETE Set the text size to 18sp-->
        <!--TODO (24) COMPLETE Set the height and width to wrap_content-->
        <!--TODO (25) COMPLETE Set the text to something that tells the user to make a search-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_github_search_results_json"
            android:textSize="18sp"
            android:text="Create a search query and press search"/>
    </ScrollView>
</LinearLayout>
